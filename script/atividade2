function descerTorre() {
  let andar = 10;
  while (andar >= 0) {
    if (andar === 0) {
      console.log("ğŸ‘¸ A princesa chegou ao tÃ©rreo! ğŸ°");
    } else {
      console.log(`A princesa estÃ¡ descendo... agora no ${andar}Âº andar`);
    }
    andar--;
  }
}
